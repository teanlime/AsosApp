<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_product_details_name"
        style="@style/Widget.AppCompat.ActionBar.TabText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        tools:text="Long skirt"/>

    <ImageView
        android:id="@+id/fragment_product_details_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_product_details_name"
        android:background="@color/cardview_shadow_start_color"
        android:contentDescription="@string/image"
        android:maxHeight="300dp"
        android:scaleType="fitCenter"
        app:layout_heightPercent="40%"
        tools:src="@drawable/logo"/>

    <TextView
        android:id="@+id/fragment_product_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_product_details_image"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."/>

    <Button
        android:id="@+id/fragment_product_details_add_to_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Add to bag"/>

</android.support.percent.PercentRelativeLayout>