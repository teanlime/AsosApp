<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_header_height"
    android:gravity="center">

    <ToggleButton
        android:id="@+id/women_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textOff="@string/shop_women"
        android:textOn="@string/shop_women"
        app:layout_widthPercent="50%"/>

    <ToggleButton
        android:id="@+id/men_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/women_button"
        android:textOff="@string/shop_men"
        android:textOn="@string/shop_men"
        app:layout_widthPercent="50%"/>

</android.support.percent.PercentRelativeLayout>
